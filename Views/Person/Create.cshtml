
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Kişi Ekleme Sayfası</div>
        <hr>
        <form action="/Person/Create">
            <div class="form-group">
                <label for="input-1">Ad Soyad</label>
                <input type="text" class="form-control" name="NameSurname" id="input-1" placeholder="Ad Soyad Giriniz" maxlength="50" required>
            </div>
            <div class="form-group">
                <label for="input-2">Code</label>
                <input type="text" class="form-control" name="Code" id="input-2" placeholder="Code" maxlength="10" required>
            </div>
            <div class="form-group">
                <label for="input-3">Şifre</label>
                <input type="password" class="form-control" name="Password" id="input-3" placeholder="Şifre" maxlength="20" required>
            </div>
            <label for="input-3">Admin Mi?</label>
            <div class="demo-radio-button">
                <input name="Answer" id="1" type="radio" value="@Survey_System.Constants.AnswerType.Yes">
                <label for="1">@Survey_System.Constants.AnswerType.Yes</label>

                <input name="Answer" id="2" type="radio" value="@Survey_System.Constants.AnswerType.No" checked>
                <label for="2">@Survey_System.Constants.AnswerType.No</label>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success shadow-success px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>
